<p style="color: green"><%= notice %></p>
<div class="container">
	<div class="row py-4">
		<div class="col">
			<h1>Products</h1>
		</div>
		<div class="col text-end">
			<%= link_to "New product", new_product_path, class: 'btn btn-primary' %>
		</div>
	</div>
	<div class="row">
		<div class="col-4">
			<h5>Categories</h5>
			<div class="list-group">
				<% @categories.each do |category| %>
					<a href="<%= products_path(cid: category.id) %>" class="list-group-item list-group-item-action"><%= category.name %></a>
				<% end %>
			</div>
		</div>
		<div class="col-8">
			<div class="card">
				<div class="card-body">
					<h5 class="card-title">Products</h5>
					<div id="products">
						<% @products.each do |product| %>
							<%= render product %>
						<% end %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
