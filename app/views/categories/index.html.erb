<p style="color: green"><%= notice %></p>
<div class="container">
	<div class="row py-4">
		<div class="col">
			<h1>Categories</h1>
		</div>
		<div class="col text-end">
			<%= link_to "New category", new_category_path, class: 'btn btn-primary' %>
		</div>
	</div>
	<div class="row py-4">
		<div class="col-4">
			<%= render 'form', category: @category %>
		</div>
		<div class="col-8">
			<table class="table">
				<thead>
					<tr>
						<th scope="col">ID</th>
						<th scope="col">Name</th>
            <th scope="col">Description</th>
						<th scope="col">Created</th>
					</tr>
				</thead>
				<tbody>
					<% @categories.each do |category| %>
						<tr>
							<th scope="row"><%= category.id %></th>
							<td><%= category.name %></td>
              <td><%= category.description %></td>
							<td><%= category.created_at.strftime("%d/%m/%Y") %></td>
							<td class="d-inline-flex p-2">
								<%= link_to "Show", category, class: 'btn btn-sm btn-info mb-1 mx-1' %>
								<%= link_to "Edit", edit_category_path(category), class: 'btn btn-sm btn-warning mb-1 mx-1' %>
								<%= button_to "Destroy", category, class: 'btn btn-sm btn-danger mb-1 mx-1' %>
							</td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>
